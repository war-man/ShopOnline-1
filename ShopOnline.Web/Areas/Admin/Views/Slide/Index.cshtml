
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    <script src="~/admin-js/slide/index.js" asp-append-version="true"></script>
    <script>
        var slidecontrol = new SlideControl();
        slidecontrol.init();
    </script>
 }
<input type="hidden" id="hid-category-id" value="0" />
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Users</h3>
        </div>

        <div class="title_right">
            <div class="col-md-2 col-sm-2 col-xs-12 form-group pull-right top_search">
                <button class="btn btn-success" id="btn-create" type="button">Create</button>
            </div>
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" id="txt-search-keyword" class="form-control" placeholder="Search...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" id="btn-search" type="button">Search!</button>
                    </span>
                </div>

            </div>

        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_content">
                    <table id="tbl-product" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>PathImage</th>
                                <th>Email</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="tbl-content"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script id="table-template" type="x-tmpl-mustache">
        <tr>
            <td>{{Id}}</td>
            <td>{{Name}}</td>
            <td>{{PathImage}}</td>
             
            <td>
                <a  data-id="{{Id}}" value="{{Id}}" class="btn-edit"><i class="fa fa-pencil-square-o"></i></a>

            </td>
            <td>
                <a href="#" data-id="{{Id}}" class="btn-delete"><i class="fa fa-trash-o"></i></a>
            </td>
        </tr>
    </script>

</div>
@await Html.PartialAsync("_CreatSlide")