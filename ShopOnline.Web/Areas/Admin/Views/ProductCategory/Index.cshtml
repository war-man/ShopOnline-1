
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    <script src="~/JQuery_Easy_UI/jquery.easyui.min.js"></script>
    <link href="~/JQuery_Easy_UI/themes/icon.css" rel="stylesheet" />
    <link href="~/JQuery_Easy_UI/themes/bootstrap/easyui.css" rel="stylesheet" />
    <script src="~/tedu.js" asp-append-version="true"></script>
    <script src="~/admin-js/productcategory/index.js" asp-append-version="true"></script>
    <script>
        var productcategory = new ProductcategoryControl();
        productcategory.init();
    </script>
}
<div class="page-title">
    <div class="title_left">
        <h3>Product Categories <small>List product categories</small></h3>
    </div>

    <div class="title_right">
        <div class="col-md-2 col-sm-2 col-xs-12 form-group pull-right">
            <button class="btn btn-success" id="btnCreate" type="button">Create</button>
        </div>

    </div>
</div>
<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <ul id="treeProductCategory"></ul>
                <div id="contextMenu" class="easyui-menu" style="width:120px;">
                    <div id="btnEdit" data-options="iconCls:'icon-edit'">Sửa</div>
                    <div id="btnDelete" data-options="iconCls:'icon-remove'">Xoá</div>
                </div>
            </div>
        </div>
    </div>
</div>
@await Html.PartialAsync("_AddEditModel")